import tkinter as tk

class RideSharingApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Ride Sharing App")

        self.profile_button = tk.Button(root, text="Profile", command=self.profile_menu)
        self.profile_button.pack()

        self.view_rides_button = tk.Button(root, text="View Rides", command=self.view_rides_menu)
        self.view_rides_button.pack()

        self.manage_rides_button = tk.Button(root, text="Manage Rides", command=self.manage_rides_menu)
        self.manage_rides_button.pack()

        self.pickup_button = tk.Button(root, text="Pick-Up", command=self.pickup_menu)
        self.pickup_button.pack()

        self.dropoff_button = tk.Button(root, text="Drop-Off", command=self.dropoff_menu)
        self.dropoff_button.pack()

    def profile_menu(self):
        profile_window = tk.Toplevel(self.root)
        profile_window.title("Profile")
        # Add profile menu widgets here

    def view_rides_menu(self):
        view_rides_window = tk.Toplevel(self.root)
        view_rides_window.title("View Rides")
        # Add view rides menu widgets here

    def manage_rides_menu(self):
        manage_rides_window = tk.Toplevel(self.root)
        manage_rides_window.title("Manage Rides")
        # Add manage rides menu widgets here

    def pickup_menu(self):
        pickup_window = tk.Toplevel(self.root)
        pickup_window.title("Pick-Up Locations")

        locations = ["Dodge Campus", "Scott Campus", "Aksarben", "Village Pointe", "Airport"]

        for location in locations:
            location_button = tk.Button(pickup_window, text=location, command=lambda loc=location: self.display_selected_location("Pick-Up", loc))
            location_button.pack()

    def dropoff_menu(self):
        dropoff_window = tk.Toplevel(self.root)
        dropoff_window.title("Drop-Off Locations")

        locations = ["Dodge Campus", "Scott Campus", "Aksarben", "Village Pointe", "Airport"]

        for location in locations:
            location_button = tk.Button(dropoff_window, text=location, command=lambda loc=location: self.display_selected_location("Drop-Off", loc))
            location_button.pack()

    def display_selected_location(self, location_type, selected_location):
        print(f"Selected {location_type} Location: {selected_location}")

if __name__ == "__main__":
    root = tk.Tk()
    app = RideSharingApp(root)
    root.mainloop()
